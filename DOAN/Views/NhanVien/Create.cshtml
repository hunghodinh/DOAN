﻿@using DOAN.Utilities;
@model DOAN.Models.TbNhanVien;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="page-title mt-5">Chỉnh sửa thông tin nhân viên </h3>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form method="post">
                    <div class="row formtype">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="IdNv">ID</label>
                                <input type="text" class="form-control mb-3" asp-for="IdNv" placeholder="NV__">
                                <span asp-validation-for="IdNv" class="alert-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="TenNv">Tên nhân viên</label>
                                <input type="text" class="form-control mb-3" asp-for="TenNv" placeholder="">
                                <span asp-validation-for="TenNv" class="alert-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="NgaySinh">Ngày Sinh</label>
                                <div class="cal-icon">
                                    <input id="datetimepicker3" type="text" class="form-control datetimepicker" asp-for="NgaySinh" placeholder="mm/dd/yyyy">
                                </div>
                                <span asp-validation-for="NgaySinh" class="alert-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="GioiTinh">Giới Tính</label>
                                <input type="text" class="form-control mb-3" asp-for="GioiTinh" placeholder="">
                                <span asp-validation-for="GioiTinh" class="alert-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="DienThoai">Số Điện thoại</label>
                                <input type="text" class="form-control mb-3" asp-for="DienThoai" placeholder="">
                                <span asp-validation-for="DienThoai" class="alert-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="DiaChi">Địa Chỉ</label>
                                <input type="text" class="form-control mb-3" asp-for="DiaChi" placeholder="">
                                <span asp-validation-for="DiaChi" class="alert-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="IdCv">Chức vụ</label>
                                <select class="form-control" asp-for="IdCv">
                                    <option value="CV01">Quản Lý</option>
                                    <option value="CV02">Nhân Viên</option>
                                </select>
                                <span asp-validation-for="IdCv" class="alert-danger"></span>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary buttonedit">Lưu</button>
                    <a asp-controller="NhanVien" asp-action="Index" class="btn btn-lg btn-warning p-2">Quay lại</a>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        $('#datetimepicker3').datetimepicker({
            format: 'LT'
        });
    });
</script>
