@model DOAN.Models.TbCtphong;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="page-title mt-5">Chỉnh sửa Phòng </h3>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form method="post">
                    <div class="row formtype">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="IdPhong">ID Phòng</label>
                                <input type="text" class="form-control mb-3" asp-for="IdPhong" placeholder="P__">
                                <span asp-validation-for="IdPhong" class="alert-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="TenPhong">Tên Phòng</label>
                                <input type="text" class="form-control mb-3" asp-for="TenPhong" placeholder="">
                                <span asp-validation-for="TenPhong" class="alert-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="GiaCt">Giá chi tiết</label>
                                <input type="text" class="form-control mb-3" asp-for="GiaCt" placeholder="">
                                <span asp-validation-for="GiaCt" class="alert-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="SoNguoi">Số người</label>
                                <input type="text" class="form-control mb-3" asp-for="SoNguoi" placeholder="">
                                <span asp-validation-for="SoNguoi" class="alert-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="SoGiuong">Số Giường</label>
                                <input type="text" class="form-control mb-3" asp-for="SoGiuong" placeholder="">
                                <span asp-validation-for="SoGiuong" class="alert-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="LoaiGiuong">Loại Giường </label>
                                <input type="text" class="form-control mb-3" asp-for="LoaiGiuong" placeholder="">
                                <span asp-validation-for="LoaiGiuong" class="alert-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="LoaiPhong">Loại Phòng</label>
                                <input type="text" class="form-control mb-3" asp-for="LoaiPhong" placeholder="">
                                <span asp-validation-for="LoaiPhong" class="alert-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="GhiChu"> Ghi chú</label>
                                <input type="text" class="form-control mb-3" asp-for="GhiChu" placeholder="">
                                <span asp-validation-for="GhiChu" class="alert-danger"></span>
                            </div>
                        </div>
                    </div>
                    <button type="submit" value="Create" class="btn btn-primary buttonedit">Lưu</button>
                    <a asp-controller="Phong" asp-action="Index" class="btn btn-lg btn-warning p-2">Quay lại</a>
                </form>
            </div>
        </div>
    </div>
</div>
