@model DOAN.Models.TbCtphieuDangKy

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-wrapper">
    <div class="content container-fluid">
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="page-title mt-5">Chỉnh sửa chi tiết phiếu đăng ký</h3>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form method="post">
                    <div class="row formtype">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="IdKh">ID Khách Hàng</label>
                                <input type="text" class="form-control mb-3" asp-for="IdKh" placeholder="KH___">
                                <span asp-validation-for="IdKh" class="alert-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="IdPhong">ID Phòng</label>
                                <input type="text" class="form-control mb-3" asp-for="IdPhong" placeholder="P__">
                                <span asp-validation-for="IdPhong" class="alert-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="SoNguoiLon">Số Người Lớn</label>
                                <input type="text" class="form-control mb-3" asp-for="SoNguoiLon" placeholder="">
                                <span asp-validation-for="SoNguoiLon" class="alert-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="SoTreEm">Số Trẻ Em</label>
                                <input type="text" class="form-control mb-3" asp-for="SoTreEm" placeholder="">
                                <span asp-validation-for="SoTreEm" class="alert-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="NgayDen">Ngày Đến</label>
                                <div class="cal-icon">
                                    <input id="datetimepicker3" type="text" class="form-control datetimepicker" asp-for="NgayDen" placeholder="MM/DD/YYYY">
                                </div>
                                <span asp-validation-for="NgayDen" class="alert-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="NgayDi">Ngày Đi</label>
                                <div class="cal-icon">
                                    <input id="datetimepicker3" type="text" class="form-control datetimepicker" asp-for="NgayDi" placeholder="MM/DD/YYYY">
                                </div>
                                <span asp-validation-for="NgayDi" class="alert-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="TongNgayO">Tong Ngày Ở</label>
                                <input type="text" class="form-control mb-3" asp-for="TongNgayO" placeholder="">
                                <span asp-validation-for="TongNgayO" class="alert-danger"></span>
                            </div>
                        </div>
                        
                    </div>
                    <button type="submit" class="btn btn-primary buttonedit">Lưu</button>
                    <a asp-controller="Phong" asp-action="Index" class="btn btn-lg btn-warning p-2">Quay lại</a>
                </form>
            </div>
        </div>
    </div>
</div>
